<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="1" author="lazebnyi_oleksandr">
        <createTable tableName="weather_data">
            <column name="country_id" type="BIGINT"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="location_name" type="VARCHAR(255)"/>
            <column name="latitude" type="DECIMAL(10, 2)"/>
            <column name="longitude" type="DECIMAL(10, 2)"/>
            <column name="timezone" type="VARCHAR(255)"/>
            <column name="last_updated_epoch" type="BIGINT"/>
            <column name="last_updated" type="DATETIME"/>
            <column name="temperature_celsius" type="DECIMAL(5, 2)"/>
            <column name="temperature_fahrenheit" type="DECIMAL(5, 2)"/>
            <column name="condition_text" type="VARCHAR(255)"/>
            <column name="wind_mph" type="DECIMAL(5, 2)"/>
            <column name="wind_kph" type="DECIMAL(5, 2)"/>
            <column name="wind_degree" type="INT"/>
            <column name="wind_direction" type="VARCHAR(3)">
                <constraints nullable="false" checkConstraint="wind_direction IN ('N', 'NE', 'E', 'SE', 'S', 'SW', 'W', 'NW')"/>
            </column>
            <column name="pressure_mb" type="DECIMAL(6, 2)"/>
            <column name="pressure_in" type="DECIMAL(6, 2)"/>
            <column name="precip_mm" type="DECIMAL(5, 2)"/>
            <column name="precip_in" type="DECIMAL(5, 2)"/>
            <column name="humidity" type="INT"/>
            <column name="cloud" type="INT"/>
            <column name="feels_like_celsius" type="DECIMAL(5, 2)"/>
            <column name="feels_like_fahrenheit" type="DECIMAL(5, 2)"/>
            <column name="visibility_km" type="DECIMAL(5, 2)"/>
            <column name="visibility_miles" type="DECIMAL(5, 2)"/>
            <column name="uv_index" type="DECIMAL(5, 2)"/>
            <column name="gust_mph" type="DECIMAL(5, 2)"/>
            <column name="gust_kph" type="DECIMAL(5, 2)"/>
            <column name="air_quality_Carbon_Monoxide" type="DECIMAL(6, 2)"/>
            <column name="air_quality_Ozone" type="DECIMAL(6, 2)"/>
            <column name="air_quality_Nitrogen_dioxide" type="DECIMAL(6, 2)"/>
            <column name="air_quality_Sulphur_dioxide" type="DECIMAL(6, 2)"/>
            <column name="air_quality_PM25" type="DECIMAL(6, 2)"/>
            <column name="air_quality_PM10" type="DECIMAL(6, 2)"/>
            <column name="air_quality_us_epa_index" type="INT"/>
            <column name="air_quality_gb_defra_index" type="INT"/>
            <column name="sunrise" type="TIME"/>
            <column name="sunset" type="TIME"/>
            <column name="moonrise" type="TIME"/>
            <column name="moonset" type="TIME"/>
            <column name="moon_phase" type="VARCHAR(255)"/>
            <column name="moon_illumination" type="INT"/>
        </createTable>
    </changeSet>
</databaseChangeLog>